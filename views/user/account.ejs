                                                        <thead>
                                                            <tr>
                                                                <th>OrderId</th>
                                                                <th>Order</th>
                                                                <th>Date</th>
                                                                
                                                                <th>Total</th>
                                                                
                                                                <th> View Details </th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% for( let i = 0; i < orderData.length; i++ ) { %>
                                                                <tr>
                                                                    <td><%= orderData[i].orderId %></td>
                                                                    <% if (orderData[i].products.length>1) { %>
                                                                        <td><img src="/public/uploads/<%= orderData[i].image %>" alt=""><a href="/orderDetails/<%= orderData[i]._id %>">+ more</a></td>
                                                                        <% } else { %>
                                                                            <td><img src="/public/uploads/<%= orderData[i].image %>" alt=""></td>
                                                                         
                                                                     
                                                                    <% } %>
                                                                    
                                                                    <td><%= orderData[i].formattedDate %></td>
                                                                    
                                                                    <td>$ <span id="orderPrice<%= orderData[i].orderId %>"><%= orderData[i].totalAmount %> </span>  for <%= orderData[i].quantity %> item</td>
                                                                    
                                                                                <td width="10%">
                                                                                    <% if (orderData[i].status==="payment pending") { %>
                                                                                        <a onclick="retryPayment('<%=orderData[i].orderId%>')" class="text-muted">Retry</a>
                                                                                        
                                                                                     
                                                                                    
                                                                                    <% } else { %>
                                                                                     
                                                                                    <a href="/orderDetails/<%= orderData[i]._id %>" class="btn btn-md rounded font-sm">Details</a>
                                                                                    <% } %>
                                                                                </td>

                                                                </tr>
                                                            <% } %>
                                                            
                                                            
                                                            
                                                        </tbody>
                                                    </table>
