<%- include("../partials/admin/admin-header") %>
<section class="content-main container">
    
   

    <div class="content-header">
        <div>
            <hr>
            <h2 class="content-title card-title" >Order detail</h2>

        </div>
    </div>

    
      
    
    <div class="card">
        
        <br>
        <header class="card-header">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
                    <span>
                        <i class="material-icons md-calendar_today"></i> <b><%= orderDetails.formattedDate %></b>
                    </span> <br>
                    <small class="text-muted" style="font-size: medium; font-weight: 400;">Order ID: <%= orderDetails.orderId %> </small>
                </div>
              
                
            
            </div>
        </header> 
        <br>
        <div class="" >
            
            
            
            <div class="row mb-50 mt-20 order-info-wrap"  style="background-color: rgb(228, 224, 224); height: 120px;
            align-items: center;">
                <div class="col-md-4" style=" text-align: center;">
                    <article class="icontext align-items-start">
                        <span class="icon icon-sm rounded-circle bg-primary-light">
                            <i class="text-primary material-icons md-person"></i>
                        </span>
                        <div class="text">
                            <h6 class="mb-1">Customer</h6>
                            <p class="mb-1">
                                <%= orderDetails[0].address.name %> 
                               <template class="__cf_email__"
                                    data-cfemail="e2838e879aa2879a838f928e87cc818d8f">[email&#160;protected]</template>
                                <br> 
                            </p>
                            <a href="/admin/userProfile/<%= orderDetails[0].user %>">View profile</a>
                        </div>
                    </article>
                </div> 
                <div class="col-md-4" style=" text-align: center;">
                    <article class="icontext align-items-start">
                        <span class="icon icon-sm rounded-circle bg-primary-light" style="margin-top: 13px;">
                            <i class="text-primary material-icons md-local_shipping"></i>
                        </span>
                        <div class="text">
                            <h6 class="mb-1">Order info</h6>
                            <p class="mb-1">
                                Shipping: Fargo express <br> Pay method: <%= orderDetails[0].paymentMethod %> <br> Status: <%= orderDetails[0].status %>
                            </p>
                            
                        </div>
                    </article>
                </div>   
                <div class="col-md-4" style=" text-align: center;">
                    <article class="icontext align-items-start">
                        <span class="icon icon-sm rounded-circle bg-primary-light">
                            <i class="text-primary material-icons md-place"></i>
                        </span>
                        <div class="text">
                            <h6 class="mb-1">Deliver to</h6>
                            <p class="mb-1">
                                House: <%= orderDetails[0].address.house %>  
                            </p>
                            <p class="mb-1">
                                City: <%= orderDetails[0].address.city %>  
                            </p>
                            <p class="mb-1">
                                Pincode : <%= orderDetails[0].address.pincode %>
                            </p>
                            
                        </div>
                    </article>
                </div> 
            </div> 
            <br>
            <div class="row">
            
                <div class="col-lg-12">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
    <tr>
        <th width="40%" style="font-weight: bold; text-align: center;">Product</th>
        <th width="20%" style="font-weight: bold; text-align: center;">Unit Price</th>
        <th width="20%" style="font-weight: bold; text-align: center;">Quantity</th>
        <th width="20%" style="font-weight: bold; text-align: center;">Total</th>
    </tr>
</thead>

<tbody>
    <% for( let i = 0; i < orderDetails.length; i++ ) { %>
    
        <tr style="text-align: center;">
            <td>
                <a class="itemside" href="#">
                    <div class="left">
                        <img src="/public/uploads/<%= orderDetails[i].productDetails[0].image[0] %>" style="width: 80px; height: 80px;" class="img-xs" alt="Item">
                    </div>
                    <div class="info"><%= orderDetails[i].productDetails[0].product_name %></div>
                </a>
            </td>
            <td>$<%= orderDetails[i].productDetails[0].offerPrice %></td>
            <td><%= orderDetails[i].products.quantity %> </td>
            <td>
                <% var totalPrice = orderDetails[i].productDetails[0].offerPrice * orderDetails[i].products.quantity; %>
                $<%= totalPrice %>
            </td>
            
        </tr>
        <% } %>
        <tr style="text-align: center;">
            <td colspan="4">
                <article class="float-end">
                    <dl class="dlist">
                        <dt>Grand total:</dt>
                        <dd><b class="h5">$<%= orderDetails[0].totalAmount %></b></dd>
                    </dl>
                    <dl class="dlist">
                        <dt class="text-muted">Status:</dt>
                        <dd>
                            <span class="badge rounded-pill alert-success text-success"><%= orderDetails[0].status %></span>
                        </dd>
                    </dl>
                </article>
            </td>
        </tr>
        
    
</tbody>



                        </table>
                        

                    </div> 
                </div> 
                <div class="col-lg-1"></div>

            </div>
            

           
            
            
        
        </div> 
        
    </div> 
</section> 
<%- include("../partials/admin/admin-footer") %>



